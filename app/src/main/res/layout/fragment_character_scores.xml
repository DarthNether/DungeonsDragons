                android:text="@string/total_score"
                app:layout_constraintStart_toStartOf="@+id/txt_calc_str"
                app:layout_constraintTop_toBottomOf="@+id/txt_calc_str" />

            <TextView
                android:id="@+id/txt_base_str"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/base_score"
                app:layout_constraintStart_toStartOf="@+id/txt_total_str"
                app:layout_constraintTop_toBottomOf="@+id/txt_total_str" />

            <TextView
