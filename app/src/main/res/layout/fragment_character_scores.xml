            <TextView
                android:id="@+id/txt_calc_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/intel"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@+id/txt_mod_con"
                app:layout_constraintTop_toBottomOf="@+id/txt_mod_con" />

            <TextView
                android:id="@+id/txt_total_int"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/total_score"
                app:layout_constraintStart_toStartOf="@+id/txt_calc_int"
