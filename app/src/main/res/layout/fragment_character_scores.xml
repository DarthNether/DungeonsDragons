                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_mod_int" />

            <TextView
                android:id="@+id/txt_calc_wis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/wis"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@+id/txt_mod_int"
                app:layout_constraintTop_toBottomOf="@+id/txt_mod_int" />

            <TextView
                android:id="@+id/txt_total_wis"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/total_score"
                app:layout_constraintStart_toStartOf="@+id/txt_calc_wis"
