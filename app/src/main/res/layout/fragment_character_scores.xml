            <TextView
                android:id="@+id/txt_base_int"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/base_score"
                app:layout_constraintStart_toStartOf="@+id/txt_total_int"
                app:layout_constraintTop_toBottomOf="@+id/txt_total_int" />

            <TextView
                android:id="@+id/txt_mod_int"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/racial_mod"
                app:layout_constraintStart_toStartOf="@+id/txt_base_con"
                app:layout_constraintTop_toBottomOf="@+id/txt_base_int" />

            <TextView
                android:id="@+id/txt_total_int_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
